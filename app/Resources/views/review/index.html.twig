{# app/Resources/views/default/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>List</h1>

    <table>
        <tbody>
        {% for review in reviews %}
        <tr>
            <th>Review Number (id)</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ review.reviewAuthor }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ review.note }}</td>
        </tr>
        {% endfor %}
        </tbody>

    </table>

    <ul>
        <li>
            <a href="/">Return to homepage</a>
        </li>
    </ul>
{% endblock %}